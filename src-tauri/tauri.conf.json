{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ProxiShare",
  "version": "1.0.0",
  "identifier": "com.proxishare.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ProxiShare",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis", "deb", "rpm", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Copyright Â© 2024 ProxiShare Team",
    "category": "Utility",
    "shortDescription": "ProxiShare - Fast and secure local file sharing",
    "longDescription": "ProxiShare is a peer-to-peer file sharing application that allows users to securely discover and transfer files over a local network with high speed and encryption."
  }
}
